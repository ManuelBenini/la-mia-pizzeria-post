
@model List<Pizza>
@{
    int count = 0;
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
            <th scope="col">price</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (Pizza pizza in Model)
            {
                <tr>
                    <th>@pizza.Name</th>
                    <td>@pizza.Description</td>
                    <td> <img src="@pizza.Image" alt="Immagine della pizza"> </td>
                    <td>@pizza.Price&euro;</td>
                    <td> <a href="@Url.Action("Show", "Pizzas", new {id = count++})">Go to the detail</a> </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <th>Nessuna pizza disponibile</th>
            </tr>
        }
        
        
    </tbody>
</table>
