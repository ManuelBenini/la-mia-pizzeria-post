
@model Pizza

<form asp-controller="Pizzas" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="exampleInputEmail1">Nome pizza:</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Inserisci nome">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Descrizione pizza:</label>
        <input type="text" asp-for="Description" class="form-control" placeholder="Inserisci descrizione">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Immagine pizza:</label>
        <input type="text" asp-for="Image" class="form-control" placeholder="Inserisci url immagine">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Prezzo pizza:</label>
        <input type="number" value="0" asp-for="Price" class="form-control" placeholder="Inserisci prezzo">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
